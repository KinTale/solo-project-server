generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider          = "postgresql"
    url               = env("DATABASE_URL")
    shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

enum Role {
    ADMIN
}

model Admin {
    id        Int         @id @default(autoincrement())
    email     String      @unique
    password  String
    role      Role        @default(ADMIN)
    Member    Member[]
    Inventory Inventory[]
    Event     Event[]
}

model Member {
    id      Int    @id @default(autoincrement())
    adminId Int
    admin   Admin  @relation(fields: [adminId], references: [id])
    name    String
    title   String
}

model Inventory {
    id          Int    @id @default(autoincrement())
    adminId     Int
    admin       Admin  @relation(fields: [adminId], references: [id])
    description String
    quantity    Int
    sponsored   String
    price       Int
    location    String
}

model Event {
    id          Int      @id @default(autoincrement())
    adminId     Int
    admin       Admin    @relation(fields: [adminId], references: [id])
    description String
    date        DateTime
    time        DateTime
    location    String
}
